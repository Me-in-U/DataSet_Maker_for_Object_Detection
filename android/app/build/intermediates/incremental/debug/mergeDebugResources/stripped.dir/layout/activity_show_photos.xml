<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="90dp">

        <TextView
            android:id="@+id/item_topic"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="주제가 들어갈 자리"
            android:textSize="35sp"
            android:layout_weight="1"
            >

        </TextView>
        <ImageButton
            android:id="@+id/add_photo_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/baseline_add_a_photo_24"
            android:text="사진추가"
            android:contentDescription="해당 주제 사진 추가" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:text="전체 이미지"/>
            <ImageView
                android:id="@+id/topicImageView"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:src="@drawable/baseline_browser_not_supported_24"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:text="크롭 이미지"
                android:layout_marginTop="20dp"/>
            <ImageView
                android:id="@+id/topicClassImageView"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/baseline_browser_not_supported_24"/>
            <TextView
                android:id="@+id/classNameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="No Image"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="15dp"
            >
            <ImageButton
                android:id="@+id/previous_image_button"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/baseline_arrow_back_24">
            </ImageButton>
            <ImageButton
                android:id="@+id/next_imag_buttone"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/baseline_arrow_forward_24">
            </ImageButton>
        </LinearLayout>

        <TextView
            android:id="@+id/imagesCounter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1/1"
            android:textSize="20sp"
            android:layout_gravity="center" />
    </LinearLayout>



</RelativeLayout>
